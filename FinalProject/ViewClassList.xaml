<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FinalProject.ViewClassList"
             Title="Classlist">

    <Grid>
        <Grid.RowDefinitions>
        <RowDefinition Height ="1*"/>
        <RowDefinition Height ="1*"/>
        <RowDefinition Height ="1*"/>
        <RowDefinition Height ="1*"/>
        <RowDefinition Height ="1*"/>
        <RowDefinition Height ="1*"/>
        <RowDefinition Height ="1*"/>
        <RowDefinition Height ="1*"/>
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="1*"/>
        <ColumnDefinition Width="1*"/>
    </Grid.ColumnDefinitions>
        <FlexLayout Grid.Row="0" Grid.Column="0">
            <Label x:Name="coursesIDLabel" FontSize="18" VerticalTextAlignment="Center" HorizontalTextAlignment="End">Student ID</Label>
            <Entry x:Name="courseIDEntry" Placeholder="Student ID"/>
            <Button x:Name="courseIDSearchButton" Text="Search" Clicked="courseIDSearchButton_Clicked"></Button>
        </FlexLayout>
        <ListView x:Name="classesListView" BackgroundColor="White" Grid.Row="0" Grid.Column="1" Grid.RowSpan="8">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>
                            <Label Text="{Binding Id}" Grid.Row="0" Grid.Column="0" TextColor="Black" Padding="5"/>
                            <Label Text="{Binding First}" Grid.Row="0" Grid.Column="1" TextColor="Black" Padding="5"/>
                            <Label Text="{Binding Last}" Grid.Row="0" Grid.Column="2" TextColor="Black" Padding="5"/>
                            <Label Text="{Binding Email}" Grid.Row="0" Grid.Column="3" TextColor="Black" Padding="5"/>
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</ContentPage>