<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="FinalProject.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:FinalProject"
    Shell.FlyoutBehavior="Disabled">
    

    <TabBar>
        <Tab Title="My Information">
            <ShellContent
        Title="Student Information"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
        </Tab>
        <Tab Title="Courses">
            <ShellContent
        Title="All Courses"
        ContentTemplate="{DataTemplate local:ViewCourses}"
        Route="ViewCourses" />
        </Tab>
        <Tab Title="Class List">
            <ShellContent
        Title="Class List"
        ContentTemplate="{DataTemplate local:ViewClassList}"
        Route="ViewClassList" />
        </Tab>
    </TabBar>


</Shell>
